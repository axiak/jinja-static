import jinjatag


@jinjatag.simple_tag
def script(src, **kwargs):
    kwargs.setdefault('type', 'text/javascript')
    return u'<script src="{0}" {1}></script">'.format(
        src,
        u' '.join('{0}={1!r}'.format(k, v) for k, v in kwargs))

@jinjatag.simple_tag
def style(src, **kwargs):
  <link rel="stylesheet" type="text/css" href="css/theme/theme.css">    
